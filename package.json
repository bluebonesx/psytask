{
  "version": "1.0.0",
  "scripts": {
    "format": "prettier --write . --ignore-path **/dist/**"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {
    "vanjs-core": "^1.6.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "prettier": "^3.6.2",
    "prettier-plugin-jsdoc": "^1.3.3",
    "typedoc": "^0.28.12"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-jsdoc"
    ],
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "tsdoc": true
  }
}
